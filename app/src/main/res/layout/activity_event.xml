<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event"
    android:background="@color/colorAkshay">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="370dp"
            android:layout_height="57dp"
            android:text="Events "
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textSize="32dp"></TextView>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="3dp"
            tools:paddingLeft="160dp"
            android:background="@drawable/event"></ImageView>

        <TextView
            android:id="@+id/event2"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:text="1 . Sports Week :-"
            android:textColorLink="#2E3097"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/event3"
            android:layout_width="400dp"
            android:layout_height="260dp"
            android:text="With the view of overall development of students, Institute organizes Sports Week every year in winter season. Students can participate in inter college competition at university and state level. In Sports Week, a large number of students participated in outdoor games like Cricket, Football, Volleyball, etc., and indoor games like Badminton, Table Tennis, Carrom, Chess, etc."
            android:textColorLink="#2E3097"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/event4"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:text="2 Gathering :-"
            android:textColorLink="#2E3097"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/event5"
            android:layout_width="400dp"
            android:layout_height="260dp"
            android:text="The most popular among the cultural activities is the Annual Prize Distribution Ceremony in which the students enjoy and share their talent in art. It is a grand event where students qualities are reflected in the form of their artistic as well as organizational qualities. Gymkhana also provides financial support for student welfare activities"
            android:textColorLink="#2E3097"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/event6"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:text="3 Engineering Day  :-"
            android:textColorLink="#2E3097"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/event7"
            android:layout_width="400dp"
            android:layout_height="260dp"
            android:text="To identify the great works done by our hard working engineers each year 15th September is celebrated as Engineers' Day. On this occasion, all Department organized various events
The students of 1st sem celebrated this event together with all department.

 The students of 3rd semester were organized a Technical Rapid fire event."
            android:textColorLink="#2E3097"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>