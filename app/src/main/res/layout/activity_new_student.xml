<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewStudent"
    android:background="@drawable/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Library Mangement"
            android:textColor="@color/colorAccent"

            android:textSize="40dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Name"
            android:textColorHint="@color/colorPrimaryDark"
           />

        <EditText
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:hint="Roll No"
            android:textColorHint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:hint="Enrollment No ."
            android:textColorHint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Book Name "
            android:textColorHint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:hint="Book Id " android:textColorHint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/t6"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:ems="10"
            android:inputType="date"
            android:text=""
            android:hint="Issuing Date " android:textColorHint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/t7"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:ems="10"
            android:hint="Returninig Date "
            android:inputType="date"
            android:text=""
            android:textColorHint="@color/colorPrimaryDark"/>

        <CheckBox
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:text="Its Student Responsibility that the Book Should Return in 15 Days Otherwise Student Will Pay Fine " />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#8F65D8"
            android:textSize="24sp" />

    </LinearLayout>

</ScrollView>